<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @director.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Image url</dt>
              <dd><%= link_to image_tag(@director.image_url), director_path(@director.id) %></dd>

              <dt>Bio</dt>
              <dd><%= @director.bio %></dd>

              <dt>Dob</dt>
              <dd><%= @director.dob %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to directors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_director_url(@director.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to director_url(@director.id), :method => "delete", :data => { :confirm => "Do you really want to delete this director?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Associated movies</div>

      <!-- List group -->
      <div class="list-group">
        <% @director.movies.each do |movie| %>
          <%= link_to movie.title, movie_path(movie.id), class: 'list-group-item'  %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
