<%= form_for @director, html: {:class => "form-horizontal"} do |f| %>
  <!-- Label and input for name -->
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <%= f.label :image_url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :image_url, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for bio -->
  <div class="form-group">
    <%= f.label :bio, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :bio, class: 'form-control', rows: 3 %>
    </div>
  </div>

  <!-- Label and input for dob -->
  <div class="form-group">
    <%= f.label :dob, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :dob, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
      or
      <a href="/directors">Cancel</a>
    </div>
  </div>
<% end %>
