<!-- Validation failure messages -->

<% if @director.errors.any? %>
  <% @director.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Director #<%= @director.id %></h3>
      </div>
      <div class="panel-body">
        <%= form_tag director_url(@director.id), :method => "patch", :class => "form-horizontal" do %>
          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @director.name %>">
            </div>
          </div>

          <!-- Label and input for image_url -->
          <div class="form-group">
            <label for="image_url" class="col-sm-2 control-label">
              Image url
            </label>
            <div class="col-sm-10">
              <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @director.image_url %>">
            </div>
          </div>

          <!-- Label and input for bio -->
          <div class="form-group">
            <label for="bio" class="col-sm-2 control-label">
              Bio
            </label>
            <div class="col-sm-10">
              <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"><%= @director.bio %></textarea>
            </div>
          </div>

          <!-- Label and input for dob -->
          <div class="form-group">
            <label for="dob" class="col-sm-2 control-label">
              Dob
            </label>
            <div class="col-sm-10">
              <input type="text" id="dob" name="dob" placeholder="Dob" class="form-control" value="<%= @director.dob %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Update Director" class="btn btn-warning">
              or
              <%= link_to "Cancel", director_url(@director.id) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
