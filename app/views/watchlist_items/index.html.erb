<div class="page-header">
  <h1>
    Watchlist items
    <%= link_to new_watchlist_item_url, :class => "btn btn-lg btn-success" do %>
      <i class="fa fa-plus"></i>
    <% end  %>
  </h1>
</div>

<!-- Responsive, Isotope-based layout example -->

<div class="row">
  <div class="col-xs-12">
    <input type="text" id="quicksearch" placeholder="Search Watchlist items (start typing)" class="form-control">
  </div>
</div>

<hr>

<div class="row isotope-container">
<% @watchlist_items.each do |watchlist_item| %>
  <% if current_user.id == watchlist_item.user_id %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Watchlist Item #<%= watchlist_item.id %></h3>
        </div>
        <div class="panel-body">
          <dl>
            <dt>User</dt>
            <dd><%= watchlist_item.user_id %></dd>

            <dt>Movie</dt>
            <dd><%= watchlist_item.movie_id %></dd>

            <dt>Watched</dt>
            <dd><%= watchlist_item.watched %></dd>

          </dl>
          <div class="btn-group btn-group-justified">
            <%= link_to watchlist_item_url(watchlist_item), :class => "btn btn-primary" do %>
              <i class="fa fa-search-plus"></i>
            <% end %>
            <%= link_to edit_watchlist_item_url(watchlist_item), :class => "btn btn-warning" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to watchlist_item_url(watchlist_item), :method => "delete", :data => { :confirm => "Do you really want to delete this watchlist_item?" }, :class => "btn btn-danger" do %>
              <i class="fa fa-trash-o"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>

<!-- JavaScript for Isotope layout and quicksearch -->
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.imagesloaded/3.1.8/imagesloaded.pkgd.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.0.0/isotope.pkgd.min.js"></script>
<script>
  $(function() {
    // quick search regex
    var qsRegex;

    // init Isotope
    var $container = $('.isotope-container');

    $container.imagesLoaded(function() {
      $container.isotope({
        itemSelector: '.isotope-item',
        layoutMode: 'masonry',
        filter: function() {
          return qsRegex ? $(this).text().match( qsRegex ) : true;
        }
      })
    });

    // use value of search field to filter
    var $quicksearch = $('#quicksearch').keyup( debounce( function() {
      qsRegex = new RegExp( $quicksearch.val(), 'gi' );
      $container.isotope();
    }, 200 ) );

  });

  // debounce so filtering doesn't happen every millisecond
  function debounce( fn, threshold ) {
    var timeout;
    return function debounced() {
      if ( timeout ) {
        clearTimeout( timeout );
      }
      function delayed() {
        fn();
        timeout = null;
      }
      timeout = setTimeout( delayed, threshold || 100 );
    }
  }
</script>

<!-- End responsive, Isotope-based layout example -->
