<%= form_for @watchlist_item, html: {:class => "form-horizontal"} do |f| %>
  <!-- Label and input for user_id -->
  <div class="form-group">
    <%= f.label :user_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :user_id, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for movie_id -->
  <div class="form-group">
    <%= f.label :movie_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :movie_id, class: 'form-control' %>
    </div>
  </div>

  <!-- Label and input for watched -->
  <div class="form-group">
    <%= f.label :watched, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.check_box :watched %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-success' %>
      or
      <a href="/watchlist_items">Cancel</a>
    </div>
  </div>
<% end %>
