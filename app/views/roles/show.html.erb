<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @role.character_name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Actor</dt>
              <dd><%= link_to @role.actor.name, actor_path(@role.actor.id) %></dd>

              <dt>Movie</dt>
              <dd><%= link_to @role.movie.title, movie_path(@role.movie.id) %></dd>
            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to roles_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_role_url(@role.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to role_url(@role.id), :method => "delete", :data => { :confirm => "Do you really want to delete this role?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
