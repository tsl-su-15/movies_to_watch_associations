<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @actor.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Image url</dt>
              <dd><%= link_to image_tag(@actor.image_url), actor_path(@actor.id) %></dd>

              <dt>Bio</dt>
              <dd><%= @actor.bio %></dd>

              <dt>Dob</dt>
              <dd><%= @actor.dob %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to actors_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_actor_url(@actor.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to actor_url(@actor.id), :method => "delete", :data => { :confirm => "Do you really want to delete this actor?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Associated roles</div>

      <!-- List group -->
      <ul class="list-group">
        <% @actor.roles.each do |role| %>
          <li class="list-group-item"><%= link_to role.character_name, role_path(role.id)  %> - <%= link_to role.movie.title, movie_path(role.movie.id)  %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
